<h1>Sign Up Confirmation</h1>

<h2>Are you sure these values are correct?</h2>

<div class="col-md-8">
  <p>Email:<%= @user.email %></p>
  <p>Name:<%= @user.name %></p>
  <div class="form-group">
    <%= button_to "Yes", {controller: "users", action: "create", params: params.permit! }, class: 'btn btn-succs' %>
    <%= button_to "No", controller: "users", action: "new", method: :get %>
  </div>
</div>
